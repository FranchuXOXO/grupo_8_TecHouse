<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ("../partials/head.ejs") %>
    <link rel="stylesheet" href="./css/normalize.css">
    <link rel="stylesheet" href="./css/styleStock.css">
</head>
    <body>
        <header>
            <div class="top-header">
                <div class="header-first-line">
                    <a href="/"><img class="TecHouse-logo" src="./images/Logo-TecHouse-header.png" alt="Logo de TecHouse"></a>
                </div>
            </div>
        </header>
        <main>
            <div class="top-main">
                <div class="stock-manager-title">
                    <h2>Manejo del stock de productos</h2>
                </div>
            </div>
            <div class="stock-manager-form">
                <form method="POST" action="/productos" enctype="multipart/form-data">
                    <div class="form-container">
                        <label for="nombre">Nombre del producto</label>
                        <input type="text" name="name">
                    </div>
                     
                    <div class="form-container">
                        <label for="foto">Imagen del producto</label>
                        <input type="file" name="image" accept=".jpg, .png">
                    </div>   

                    <div class="form-container-description">
                        <label for="descripcion">Descripción del producto</label>
                        <textarea name="description" rows="3"></textarea>
                    </div>              
                    <div class="form-container">
                        <label for="color">Color del producto</label>
                        <br />
                        <select name="colours">
                            <option value="rojo">Rojo</option>
                            <option value="verde">Verde</option>
                            <option value="azul">Azul</option>
                        </select>
                    </div>
                    <div class="form-container">
                        <label for="categoria">Categoría del producto</label>
                        <br />
                        <select name="compatibility">
                            <option value="Alexa">Alexa</option>
                            <option value="Siri">Siri</option>
                        </select>
                    </div>
                    <div class="form-container">
                        <label>Precio del producto</label>
                        <input type="text" name="price">
                    </div>
                    <div class="form-container-buttons">
                        <input class="form-button" type="reset" value="Limpiar datos">
                        <input class="form-button" type="submit" value="Crear producto">
                    </div>
                </form>
            </div>
        </main>
        <%- include("../partials/footer.ejs") %>
    </body>
</html>