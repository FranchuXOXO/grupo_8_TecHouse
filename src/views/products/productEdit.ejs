<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ("../partials/head.ejs") %>
    <link rel="stylesheet" href="./css/styleList.css">
</head>
<body>
    <%- include("../partials/header.ejs") %>

    <main>

        <div class="containerProducts">
            <div class="row">
                 <div class="column">
                    <h2 class="productEditTitle">Edicion de Producto: <i> <%= productToEdit.name %>
                    </i></h2>

        </div>

        <div class="column">
            <form action="/products/<%= productToEdit.id %>?_method=PUT" method="POST">
                <div class="row product-detail">
                    <div class="column1">
                        <label for="name" class="form-label">Nombre del producto:</label>
                        <input type="text" value="<%= productToEdit.name %>" id="name" name="name"
                            placeholder="Ej: Amazon Echo Dot" class="form-input">
        </div>

        <div class="column">
            <label for="description" class="form-label">Descipci√≥n:</label>
            <textarea name="description" id="description" class="form-input"></textarea>
        </div>

        <div class="imagen1">
            <label for="imagen">Imagen</label>
            <div class="imagen2">
             
                <input type="file" name="imagen" id="imagen">
                <input type="hidden" name="oldImagen" value="<%= product.imagen %>">
            </div>
        </div>

        <div>
            <label for="colores">Colores</label>
            <select name="colores" id="colores" required>
                <option value="<%= product.colores %>"><%= product.colores %></option>
                <option value="Rojo">Rojo</option>
                <option value="Verde">Verde</option>
                <option value="Azul">Azul</option>
            </select>
        </div>
    
         <div class="column1">
            <label for="price" class="form-label">Precio del producto:</label>
            <input type="text" value="<%= productToEdit.price %>" id="price" name="price"
                     placeholder="Ej: 5678.00" class="form-input">
        </div>

        <div class="column">
            <button type="submit" class="buy-now-button">Guardar producto</button>
        </div>  
    
    </main>
    <%- include("../partials/footer.ejs") %>
</body>

</html>

